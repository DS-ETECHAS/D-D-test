<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dandd.Views.RaceView"
             Title="RacesView">
    <StackLayout Margin="20">
        <Frame CornerRadius="10" Padding="10" HorizontalOptions="FillAndExpand" BackgroundColor="#D9D9D9">
            <!-- Vertical StackLayout for the image and label inside the frame -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" VerticalOptions="Center">
                <!-- Image of the dice -->
                <Image Source="dice.png" HorizontalOptions="Start" WidthRequest="100" HeightRequest="100"/>
                <!-- Label for the race name -->
                <Label Text="Race 1" HorizontalOptions="Start" VerticalOptions="Center" FontSize="20" />
            </StackLayout>
        </Frame>
    </StackLayout>
