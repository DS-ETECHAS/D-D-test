<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dandd.Views.RaceView"
             Title="RacesView">
    <ScrollView>
        <CollectionView x:Name="ResultsCollectionView" ItemsSource="{Binding Results}" EmptyView="Nenhuma raÃ§a encontrada">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="20" RowSpacing="25" VerticalOptions="Start" HorizontalOptions="FillAndExpand" BindableLayout.ItemsSource="{Binding Count}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Frame 
                            Grid.Row="0" 
                            Grid.Column="0" 
                            CornerRadius="10"
                            Padding="10" 
                            HorizontalOptions="FillAndExpand" 
                            BackgroundColor="#D9D9D9" 
                            BindableLayout.ItemsSource="{Binding Results}"
                            >
                            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" VerticalOptions="Center">
                                <Image Source="dice.png" HorizontalOptions="Start" WidthRequest="100" HeightRequest="100"/>
                                <StackLayout Orientation="Vertical" HorizontalOptions="Start" VerticalOptions="Center">
                                    <Label Text="{Binding Name}" HorizontalOptions="Start" VerticalOptions="Center" FontSize="20" />
                                    <BoxView HeightRequest="2"/>
                                    <Label Text="{Binding Url}" />
                                </StackLayout>
                            </StackLayout>
                        </Frame>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>